<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/coloredBackground"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"/>

    <include layout="@layout/item_currently_reading_preview"
        android:id="@+id/bookPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/bookDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:justificationMode="inter_word"
        tools:text="@string/app_name"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/bookPreview"/>

    <RelativeLayout
        android:id="@+id/defaultAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <Button
            android:id="@+id/toReadButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:drawableTop="@drawable/books"
            android:text="@string/to_read"
            style="@style/ButtonWithIconTheme"
            />

        <Button
            android:id="@+id/toBuyButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:drawableTop="@drawable/shopping_cart"
            android:text="@string/to_buy"
            style="@style/ButtonWithIconTheme"
            android:layout_toEndOf="@id/toReadButton"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toReadAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <Button
            android:id="@+id/startReadingButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:drawableTop="@drawable/books"
            android:text="@string/start_reading"
            style="@style/ButtonWithIconTheme" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toBuyAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <Button
            android:id="@+id/moveToReadButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:drawableTop="@drawable/books"
            android:text="@string/move_to_read"
            style="@style/ButtonWithIconTheme" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/finishReadingAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <Button
            android:id="@+id/finishReadingButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:drawableTop="@drawable/books"
            android:text="@string/finish_reading"
            style="@style/ButtonWithIconTheme" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>